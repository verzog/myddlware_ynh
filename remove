#!/bin/bash
set -eo pipefail

: "${YNH_APP_INSTANCE_NAME:?}"
app="$YNH_APP_INSTANCE_NAME"
export YNH_APP_INSTANCE_NAME="$app"
: "${YNH_APP_INSTALL_BASEDIR:=/var/www}"
: "${YNH_APP_INSTALL_DIR:=${YNH_APP_INSTALL_BASEDIR%/}/$app}"
export YNH_APP_INSTALL_BASEDIR
export YNH_APP_INSTALL_DIR
: "${YNH_APP_DATA_DIR:=/var/lib/$app}"
export YNH_APP_DATA_DIR

set -u
SCRIPT_DIR="$(cd -- "$(dirname "$0")" && pwd)"
exec "$SCRIPT_DIR/scripts/remove" "$@"
